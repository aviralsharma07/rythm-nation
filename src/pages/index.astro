---
import Layout from '../layouts/Layout.astro';
import H1 from '../components/H1.astro';
import Main from '../components/Main.astro';
import FeaturedPostList from '../components/FeaturedPostList.astro';
import {Image} from "astro:assets";
import Photo from "../../public/images/band.jpg";
import {getCollection} from "astro:content";

const posts = await getCollection("posts");

---

<Layout title="Rythm Nation Blog">
	<Main>
		<section class="text-center py-24 bg-teal-100 fade-in rounded-2xl">
			<H1 text="Rhythm Nation" />
			<p class="text-lg text-zinc-700 mt-4 max-w-2xl mx-auto">
			  A community of music producers and enthusiasts. Discover the latest trends, tips, and tutorials in the world of music production.
			</p>
			<a href="/blog" class="mt-8 inline-block bg-teal-900 text-white px-6 py-3 rounded-full text-lg transition-transform duration-300 hover:scale-105">
			  Explore Blog
			</a>
		  </section>

		  <section class="py-24 slide-up">
			<h2 class="text-4xl font-bold mb-12 text-center text-teal-900">Featured Posts</h2>
			<FeaturedPostList posts={posts}/>
		  </section>
  
		  <section class="text-center py-24 bg-teal-100 fade-in rounded-2xl mb-6">
			<h2 class="text-4xl font-bold mb-12 text-teal-900">Join Our Community</h2>
			<p class="text-lg text-zinc-700 mb-8 max-w-2xl mx-auto">
			  Connect with fellow music producers, share your creations, and stay inspired. Sign up for our newsletter to get the latest updates.
			</p>
			<a href="/newsletter" class="mt-8 inline-block bg-teal-900 text-white px-6 py-3 rounded-full text-lg transition-transform duration-300 hover:scale-105">
			  Sign Up
			</a>
		  </section>
	</Main>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');
	body {
	  font-family: 'Montserrat', sans-serif;
	}
	.fade-in {
	  animation: fadeIn 2s ease-in-out;
	}
	@keyframes fadeIn {
	  0% { opacity: 0; }
	  100% { opacity: 1; }
	}
	.slide-up {
	  animation: slideUp 1.5s ease-in-out;
	}
	@keyframes slideUp {
	  0% { transform: translateY(100%); }
	  100% { transform: translateY(0); }
	}
  </style>